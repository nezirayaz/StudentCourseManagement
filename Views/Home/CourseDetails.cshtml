@model StudentCourseManagement.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-book"></i> Course Details
        </h2>
        <a asp-action="EnrollStudent" asp-route-courseId="@Model.Id" class="btn btn-primary">
            <i class="bi bi-person-plus"></i> Enroll Student
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Course Information</h4>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Course Code:</th>
                            <td><span class="badge bg-info">@Model.CourseCode</span></td>
                        </tr>
                        <tr>
                            <th>Course Name:</th>
                            <td><strong>@Model.CourseName</strong></td>
                        </tr>
                        <tr>
                            <th>Credits:</th>
                            <td>@Model.Credits</td>
                        </tr>
                        <tr>
                            <th>Instructor:</th>
                            <td>
                                @if (Model.Instructor != null)
                                {
                                    <span>@Model.Instructor.FullTitle</span>
                                    @if (!string.IsNullOrEmpty(Model.Instructor.Department))
                                    {
                                        <br /><small class="text-muted">Department: @Model.Instructor.Department</small>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Not assigned</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        Enrolled Students
                        <span class="badge bg-light text-dark float-end">@Model.EnrolledStudents.Count</span>
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.EnrolledStudents.Count == 0)
                    {
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle"></i> No students enrolled yet.
                        </div>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var student in Model.EnrolledStudents)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@student.FullName</h6>
                                        <small class="badge bg-primary">@student.StudentNumber</small>
                                    </div>
                                    @if (!string.IsNullOrEmpty(student.Email))
                                    {
                                        <small class="text-muted">@student.Email</small>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="ListCourses" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Courses
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-house"></i> Home
        </a>
    </div>
</div>
