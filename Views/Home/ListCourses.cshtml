@model List<StudentCourseManagement.Models.Course>

@{
    ViewData["Title"] = "Courses List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-book"></i> Courses List
        </h2>
        <a asp-action="AddCourse" class="btn btn-info">
            <i class="bi bi-plus-circle"></i> Add New Course
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No courses found. <a asp-action="AddCourse">Add the first course</a>.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">
                                <span class="badge bg-light text-dark">@course.CourseCode</span>
                                @course.CourseName
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <strong>Credits:</strong> @course.Credits<br />
                                <strong>Instructor:</strong> @(course.Instructor?.FullTitle ?? "Not assigned")<br />
                                <strong>Enrolled Students:</strong> @course.EnrolledStudents.Count
                            </p>
                        </div>
                        <div class="card-footer">
                            <a asp-action="CourseDetails" asp-route-id="@course.Id" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                            <a asp-action="EnrollStudent" asp-route-courseId="@course.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-person-plus"></i> Enroll Student
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-3">
            <p class="text-muted">
                <i class="bi bi-info-circle"></i> Total: <strong>@Model.Count</strong> course(s)
            </p>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Home
        </a>
    </div>
</div>
