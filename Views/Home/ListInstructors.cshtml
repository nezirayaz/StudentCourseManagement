@model List<StudentCourseManagement.Models.Instructor>

@{
    ViewData["Title"] = "Instructors List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-person-badge"></i> Instructors List
        </h2>
        <a asp-action="AddInstructor" class="btn btn-success">
            <i class="bi bi-person-plus"></i> Add New Instructor
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No instructors found. <a asp-action="AddInstructor">Add the first instructor</a>.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Title & Name</th>
                                <th>Department</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var instructor in Model)
                            {
                                <tr>
                                    <td>@instructor.Id</td>
                                    <td>
                                        <strong>@instructor.FullTitle</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(instructor.Department))
                                        {
                                            <span class="badge bg-success">@instructor.Department</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>@(instructor.Email ?? "N/A")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="mt-3">
                    <p class="text-muted mb-0">
                        <i class="bi bi-info-circle"></i> Total: <strong>@Model.Count</strong> instructor(s)
                    </p>
                </div>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Home
        </a>
    </div>
</div>
